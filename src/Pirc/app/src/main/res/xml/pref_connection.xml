<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference android:key="connection_address"
                        android:title="@string/pref_title_connection_address"
                        android:defaultValue="192.168.1.1:8095"
                        android:maxLines="1"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />

    <ListPreference android:key="connection_protocol"
                    android:title="@string/pref_title_connection_protocol"
                    android:defaultValue="HTTP (REST)"
                    android:entries="@array/pref_protocols"
                    android:entryValues="@array/pref_protocols"
                    android:negativeButtonText="@null"
                    android:positiveButtonText="@null" />

</PreferenceScreen>
